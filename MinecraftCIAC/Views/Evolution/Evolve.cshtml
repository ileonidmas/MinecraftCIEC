@model IEnumerable<MinecraftCIAC.Models.Evolution>
@{
    ViewBag.Title = "Evolve";
}


<div>
    @Html.ActionLink("Publish", "Publish",new { }, new { @class = "btn btn-primary", @style = "color:white" }) 
    @Html.ActionLink("Return to main page", "Return", new { }, new { @class = "btn btn-primary", @style = "color:white" })
</div>

@*Champion*@

<h3>Champion</h3>
<div>
    <video width="320" height="240" src="~/Results/Users/@Model.ElementAt(0).DirectoryPath" controls autoplay />
</div>
<div>
    @Html.ActionLink("Evolve small", "Evolve", new { id = 0, fitness = 1 }, new { onclick = "javascript:showLoading();", @class = "btn btn-primary", @style = "color:white" })    
    @Html.ActionLink("Evolve big", "Evolve", new { id = 0, fitness = 2 }, new { onclick = "javascript:showLoading();", @class = "btn btn-primary", @style = "color:white" })    
    @Html.ActionLink("Perform novelty search", "Evolve", new { id = 0, fitness = -1 }, new { onclick = "javascript:showLoading();", @class = "btn btn-primary", @style = "color:white" })    
</div>

@*Poppulation list*@

<h3>Candidates</h3>
<table class="table-striped">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
    </tr>

    @for (int i = 1; i < Model.Count(); i++)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).ID)
            </td>
            <td>
                <video width="320" height="240" src="~/Results/Users/@Model.ElementAt(i).DirectoryPath" controls autoplay />
            </td>
            <td>
                @Html.ActionLink("Evolve small", "Evolve", new { id = Model.ElementAt(i).ID, fitness = 1 }, new { onclick = "javascript:showLoading();", @class = "btn btn-primary", @style = "color:white" })
            </td>
            <td>
                @Html.ActionLink("Evolve big", "Evolve", new { id = Model.ElementAt(i).ID, fitness = 2 }, new { onclick = "javascript:showLoading();", @class = "btn btn-primary", @style = "color:white" })
            </td>
            <td>
                @Html.ActionLink("Perform novelty search", "Evolve", new { id = Model.ElementAt(i).ID, fitness = -1 }, new { onclick = "javascript:showLoading();", @class = "btn btn-primary", @style = "color:white" })
            </td>
        </tr>
    }

    @Html.Raw(TempData["msg"])

