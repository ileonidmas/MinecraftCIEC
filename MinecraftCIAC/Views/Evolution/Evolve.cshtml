@model IEnumerable<MinecraftCIAC.Models.Evolution>
@{
    ViewBag.Title = "Evolve";
}

@Html.Raw(TempData["msg"])



<h2>Evolve</h2>

<div>
    @Html.ActionLink("Publish", "Publish") |
    @Html.ActionLink("Return to main page", "Return")
</div>

@*Champion*@

<div>
    <video width="320" height="240" src="~/Results/Users/@Model.ElementAt(0).DirectoryPath" controls autoplay />
</div>


@*Poppulation list*@
<table class="table-striped">
    <tr>

        <th>
            Result
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <video width="320" height="240" src="~/Results/Users/@item.DirectoryPath" controls autoplay />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.ActionLink("Evolve small", "Evolve", new { id = item.ID, fitness = 2, isNovelty = 0 })
        </td>
        <td>
            @Html.ActionLink("Evolve big", "Evolve", new { id = item.ID, fitness = 10, isNovelty = 0 })
        </td>
        <td>
            @Html.ActionLink("Perform novelty search", "Evolve", new { id = item.ID, fitness = 0, isNovelty = 1 })
        </td>
    </tr>
    }



