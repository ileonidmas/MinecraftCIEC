@model IEnumerable<MinecraftCIAC.Models.Evolution>
@{
    ViewBag.Title = "Start Evolution";
}

<div>
    @Html.ActionLink("Start new evolution", "Evolve", new { }, new { id = "btn", @class = "btn btn-primary", @style = "color:white" })
</div>


<table class="table-striped">
    <tr>
        @if (Model.Count() > 0)
        {

            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
        }
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                <video width="320" height="240" src="~/EvolutionDB/Candidates/@item.ParentVideoPath" controls autoplay />
            </td>
            <td>
                @Html.ActionLink("Continue", "Continue", new { filesLocation = item.DirectoryPath }, new { id = "btn", @class = "btn btn-primary", @style = "color:white" })
            </td>

            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-primary", @style = "color:white" })
            </td>
        </tr>
    }



@*Loading spinner*@

    <div class="spinner" style="display:none">
        <div class="center-div">
            <div class="inner-div">
                <div class="loader"></div>
                <p>
                    <strong>Running evolution...</strong> .
                </p>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#btn').click(function () {
                $('.spinner').css('display', 'block');
            });
        });
    </script>
