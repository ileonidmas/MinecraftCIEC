@model IEnumerable<MinecraftCIAC.Models.Evolution>
@{
    ViewBag.Title = "Start Evolution";
}

<div>
    @Html.ActionLink("Start new evolution", "Evolve") 
</div>

<table class="table-striped">
    <tr>

        <th>
                Result
            </th>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
    </tr>    
    @foreach (var item in Model)
    {
    <tr>
        <td>
            <video width="320" height="240"  src="~/EvolutionDB/Candidates/@item.ParentVideoPath" controls autoplay />            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.ActionLink("Continue", "Continue", new { filesLocation = item.DirectoryPath })
        </td>
    </tr>
    }
